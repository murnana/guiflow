{
    "env": {
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "impliedStrict": true
        }
    },
    "extends": "eslint:all",
    "rules": {
        "one-var":["error", {"separateRequires": true}],
        "no-sync":["error", { "allowAtRootLevel": true }],
        "no-magic-numbers":["error", {"ignore": [0]}]
    }
}